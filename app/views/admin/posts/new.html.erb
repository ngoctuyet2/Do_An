<%= form_with(scope: :post, url:  admin_create_posts_path, local: true) do |form| %>
   <div class="form-group" style="margin-left: 20%; margin-right: 20%;">
     <%= form.label :name %>
     <%= form.text_field :name, id: :post_name, class:'form-control'%>
   </div>

   <div class="form-group" style="margin-left: 20%; margin-right: 20%;">
     <%= form.label :content%>
     <%= form.text_area :content, id: :post_content,  class:'form-control'%>
   </div>
   <div class="form-group" style="margin-left: 20%; margin-right: 20%;">
     <%= form.label :product_id %>
     <%= form.select(:product_id, @products.map{|f| [f.name, f.id]}, {}, { :class => 'form-control' })%>
   </div>
    <div class="form-group" style="margin-left: 20%; margin-right: 20%;">
     <%= form.label :user_id %>
     <%= form.select(:user_id, @users.map{|f| [f.name, f.id]}, {}, { :class => 'form-control' })%>
   </div>
   <div class="actions" style="margin-left: 20%; margin-right: 20%;">
     <%= form.submit %>
   </div>
 <% end %>
 <%= link_to 'Trở lại', admin_posts_path %>