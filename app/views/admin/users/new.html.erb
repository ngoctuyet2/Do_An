<%= form_with(scope: :user,url:admin_create_users_path, local: true) do |form| %>
 
  <div class="form-group" style="margin-left: 20%; margin-right: 20%">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class:'form-control'%>
  </div>

  <div class="form-group" style="margin-left: 20%; margin-right: 20%">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class:'form-control' %>
  </div>
  <div class="form-group" style="margin-left: 20%; margin-right: 20%">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password, class:'form-control' %>
  </div>
  <div class="form-group" style="margin-left: 20%; margin-right: 20%">
    <%= form.label :position %>
    <%= form.text_field :position, id: :user_position, class:'form-control'%>
  </div>
  <div class="form-group" style="margin-left: 20%; margin-right: 20%">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :user_avatar, class:'form-control' %>
  </div>

  <div class="actions" style="margin-left: 20%; margin-right: 20%">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Trở lại',  admin_users_path%>