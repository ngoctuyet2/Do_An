<%= form_with(scope: :reply, url:  admin_create_replies_path, local: true) do |form| %>
   <div class="form-group" style="margin-left: 20%; margin-right: 20%">
     <%= form.label :content%>
     <%= form.text_area :content, id: :reply_content,  class:'form-control'%>
   </div>
   <div class="form-group" style="margin-left: 20%; margin-right: 20%">
     <%= form.label :comment_id %>
     <%= form.select(:comment_id, @comments.map{|f| [f.content, f.id]}, {}, { :class => 'form-control' })%>
   </div>
    <div class="form-group" style="margin-left: 20%; margin-right: 20%">
     <%= form.label :user_id %>
     <%= form.select(:user_id, @users.map{|f| [f.name, f.id]}, {}, { :class => 'form-control' })%>
   </div>
   <div class="actions" style="margin-left: 20%; margin-right: 20%">
     <%= form.submit %>
   </div>
 <% end %>
 <%= link_to 'Trở lại',  admin_replies_path %>