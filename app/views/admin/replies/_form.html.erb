<%= form_with(scope: :reply, url:  admin_update_replies_path, method: :put, slocal: true) do |form| %>
   <div class="form-group">
     <%= form.label :content%>
     <%= form.text_area :content, id: :reply_content,  class:'form-control'%>
   </div>
   <div class="form-group">
     <%= form.label :comment_id %>
     <%= form.select(:comment_id, @comments.map{|f| [f.reply_content, f.id]}, {}, { :class => 'form-control' })%>
   </div>
    <div class="form-group">
     <%= form.label :user_id %>
     <%= form.select(:user_id, @users.map{|f| [f.name, f.id]}, {}, { :class => 'form-control' })%>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>