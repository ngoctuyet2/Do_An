<%= form_with(scope: :promotion, url:  admin_update_promotions_path, method: :put, local: true) do |form| %>
  <div class="form-group">
     <%= form.label :name %>
     <%= form.text_field :name, id: :promotion_name, class:'form-control'%>
   </div>

   <div class="form-group">
     <%= form.label :content%>
     <%= form.text_area :content, id: :promotion_content,  class:'form-control'%>
   </div>
   <div class="form-group">
     <%= form.label :product_id %>
     <%= form.select(:product_id, @products.map{|f| [f.name, f.id]}, {}, { :class => 'form-control' })%>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>
 <%= link_to 'Trở lại', admin_promotions_path %>